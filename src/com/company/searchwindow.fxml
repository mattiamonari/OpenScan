<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <TextField fx:id="input" promptText="Enter here the Block number/Hash/Txs you are searching for." BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <Button fx:id="backButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" stylesheets="@css/main.css" text="Back" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin></Button>
   </bottom>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Label opacity="0.5" text="Try to search something pressing enter in the upper form.." />
         </children>
      </StackPane>
   </center>
</fx:root>
