<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="Welcome to your personal wallet!" BorderPane.alignment="CENTER">
         <font>
            <Font name="Roboto Thin" size="24.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
   <center>
      <VBox fx:id="centerInfoVBox" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="mnemonic" prefHeight="30.0" prefWidth="600.0" promptText="Insert here your mnemonic to restore the data">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="addLab" text="Address:">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font></Label>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="This program is open source! If you don't trust to put your mnemonic here, just take a look to the source code! We don't collect any datas." wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Label>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" stylesheets="@css/main.css" text="Back">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" stylesheets="@css/main.css" text="Make a small donation!">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</fx:root>
